<% layout('/layout/boilerplate.ejs') -%>
<body>
   <div class="edit_me">
    <div>
        <form action="/listings" method="POST" enctype="multipart/form-data">
            <p class="title_change">Ready to Airbnb it?</p>
            <label for="title">Title:</label>
            <input type="text" id="title" name="listing[title]" placeholder="Title"><br>
        
            <label for="description">Description:</label>
            <input type="text" id="description" name="listing[description]" placeholder="Description"><br>
        
            <label for="photo">Photo URL:</label>
            <input type="file" id="photo" name="listing[photo]" placeholder="Photo URL"><br>
        
            <label for="location">Location:</label>
            <input type="text" id="location" name="listing[location]" placeholder="Location"><br>
        
            <label for="country">Country:</label>
            <input type="text" id="country" name="listing[country]" placeholder="Country"><br>
        
            <label for="price">Price:</label>
            <input type="text" id="price" name="listing[price]" placeholder="Price"><br>
        
            <button class="btn btn-danger">Submit</button>
        </form>
    </div>
   </div>
</body>

