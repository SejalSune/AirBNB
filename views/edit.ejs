<% layout('/layout/boilerplate.ejs') -%>
<body>
    <div class="edit_me">
        <div>
            <form action="/listings/<%= editlisting._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
                <p class="title_change">Make Changes in your Airbnb</p>
                
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="listing[title]" value="<%= editlisting.title %>" required><br>
                </div>
                
                <div>
                    <label for="description" class="form-label">Description</label><br>
                    <textarea id="description" name="listing[description]" rows="4" cols="50" required><%= editlisting.description %></textarea><br>
                </div>
                
                <div>
                    <label for="photo" class="form-label">Photo URL</label>
                    <input type="text" id="photo" name="listing[photo]" value="<%= editlisting.photo %>" class="form-control" required><br>
                </div>
                
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="listing[location]" value="<%= editlisting.location %>" class="form-control" required><br>
                </div>
                
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input type="text" id="country" name="listing[country]" value="<%= editlisting.country %>" class="form-control" required><br>
                </div>
                
                <div>
                    <label for="price" class="form-label">Price</label>
                    <input type="text" id="price" name="listing[price]" value="<%= editlisting.price %>" class="form-control" required><br>
                </div>
                
                <button class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (() => {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }

                form.classList.add('was-validated')
            }, false)
        })
        })()
    </script>
</body>
