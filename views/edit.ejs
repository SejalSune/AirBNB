<% layout('/layout/boilerplate.ejs') -%>
<body>
    <div class="edit_me">
        <div>
            <form action="/listings/<%= editlisting._id %>?_method=PUT" method="POST">
                <p class="title_change">Make Changes in your Airbnb</p>
                <label for="title">Title</label>
                <input type="text" id="title" name="listing[title]" value="<%= editlisting.title %>"><br>
            
                <label for="description">Description</label><br>
                <textarea id="description" name="listing[description]" rows="4" cols="50"><%= editlisting.description %></textarea><br>
            
                <label for="photo">Photo URL</label>
                <input type="text" id="photo" name="listing[photo]" value="<%= editlisting.photo %>"><br>
            
                <label for="location">Location</label>
                <input type="text" id="location" name="listing[location]" value="<%= editlisting.location %>"><br>
            
                <label for="country">Country</label>
                <input type="text" id="country" name="listing[country]" value="<%= editlisting.country %>"><br>
            
                <label for="price">Price</label>
                <input type="text" id="price" name="listing[price]" value="<%= editlisting.price %>"><br>
            
                <button class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>
</body>


